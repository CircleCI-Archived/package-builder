#!/bin/bash

set -e
set -x

package=$1
version=$2
release=$3
install_dir=$4
deb=circleci-${package}-${version}_$release_amd64.deb
image=kimh/package_builder

cd $package

pushd src/
docker build --build-arg package=${package} \
             --build-arg version=${version} \
             --build-arg install_dir=${install_dir} \
             -t $image .

docker run $image cat $deb > ../$deb
popd

